    /************************ Start Login  Code ***************************/
    $("#loginphoneno").click(function(){
      $("#phoner").hide();
      $("#phonein").hide();
    });
    $("#loginpassword").click(function(){
      $("#passr").hide();
    });
    $('#loginclick').click(function(){
        var cell = $("#loginphoneno").val();
        var pass = $("#loginpassword").val();

        if(cell.length == 0){
          $("#phoner").show();
          return;
        }
        if(cell.length != 11){
          $("#phonein").show();
          return;
        }
        if(pass.length == 0){
          $("#passr").show();
          return;
        }
        $("#phoner").hide();
        $("#phonein").hide();
        $("#passr").hide();
        $.ajax({
                 url: "/users/login", // Route to the Script Controller method
                type: "post",
            dataType: "json",
                data: {phoneno: cell , password : pass}, // This goes to Controller in params hash, i.e. params[:file_name]
            complete: function() {},
             success: function(data, textStatus, xhr) {
                        if(data == "-1"){
                            $("#invalidlogin").show();
                            return false;
                        }
                        else if (data == "-2"){
                          alert("Error Occur During Login!\nTry Again Later");
                        }
                        else{
                          window.location.replace("https://insaniyat-final-4.herokuapp.com/");
                        }
                      },
               error: function() {
                        alert("Ajax error!");
                      }
        });

    });
    /************************ End Login Code ***************************/

