                type: "post",
            dataType: "json",
                data: {phone: $(this).val()}, // This goes to Controller in params hash, i.e. params[:file_name]
            complete: function() {},
             success: function(data, textStatus, xhr) {
                        if(data == "-1")
                        {
                          $("#signphone").hide();
                          $('#signupclick').prop('disabled' , false);
                          $('.submit').prop('disabled' , false);        
                        }
                        else
                        {
